<%- include('header')%>
  <!-- =============================================== -->
  <%- include('aside')%>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Car Showroom For Manager
        </h1>

        <!-- Main content -->
        <section class="content">

          <div class="box">
            <div class="box-body">
              <form action="" method="GET" class="form-inline" role="form">

                <div class="form-group">
                  <input type="text" class="form-control" id="" name="name" placeholder="Bạn muốn tìm gì?">
                </div>
                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                <a href="/add-cars" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Thêm mới</a>
              </form>
              <table class="table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Ngày nhập</th>
                    <th>Tên Hãng xe</th>
                    <th>Model</th>
                    <th>Năm Sản Xuất</th>
                    <th>Trạng Thái</th>
                    <th>QĐ Đã Đi</th>
                    <th> Số Lượng</th>
                    <th>Giá Mỗi Chiếc</th>
                  </tr>
                </thead>
                <tbody>
                  <%for(let car of res) {%>
                    <tr>
                      <td scope="row">
                        <%=car.imp_id%>
                      </td>
                      <td>
                        <%= new Date(car.date).toLocaleDateString() %>
                      </td>
                      <td>
                        <%=car.brand_name%>
                      </td>
                      <td>
                        <%=car.car_model%>
                      </td>
                      <td>
                        <%=new Date(car.publish).toLocaleDateString()%>
                      </td>
                      <td>
                        <%=car.status%>
                      </td>
                      <td>
                        <%=car.mileage%>
                      </td>
                      <td>
                        <%=car.quantity%>
                      </td>
                      <td>
                        <%=car.price%>
                      </td>
                    </tr>
                    <%}%>
                </tbody>
              </table>
            </div>
            <div class="box-footer">

              <ul class="pagination">
                <li><a href="/cars/?page=<%=_page > 1 ? _page-1 : 1%>">&laquo;</a></li>
                <% for(i=1; i <=totalPage;++i){ %>
                  <%if (id) { %>
                    <li class="<%=_page == i ? 'active' : ''%>"><a href="/cars/?page=<%=i%>&name=<%=id%> ">
                        <%=i%>
                      </a></li>
                    <%} else {%>
                      <li class="<%=_page == i ? 'active' : ''%>"><a href="/cars/?page=<%=i%>">
                          <%=i%>
                        </a></li>
                      <% } %>
                        <%}%>
                          <li><a href="/cars/?page=<%=_page < totalPage ? _page + 1 : totalPage%>">&raquo;</a></li>
              </ul>

            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%- include('footer')%>