<%- include('header')%>
<!-- =============================================== -->
<%- include('aside')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Car Showroom For Manager
    </h1>

  <!-- Main content -->
  <section class="content">

    <div class="box">
      <div class="box-body">
        <form action="" method="get" class="form-inline" role="form">
                      
          <div class="form-group">
              <input type="text" class="form-control" id="" name="name" placeholder="">
          </div>
          <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
      </form>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Tên</th>
              <th>Mô tả</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%for (let bra of res){  %>
            <tr>
                <td scope="row"> <%=bra.bra_id%></td>
                <td><%=bra.brand_name%></td>
                <td><%=bra.description%></td>
                <td class="text-right">
                  <a href="/edit-carbrands/<%=bra.bra_id%>" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Sửa</a> 
                  <a href="/delete-carbrands/<%=bra.bra_id%>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Xóa</a>
                </td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
      <div class="box-footer">
        
        <ul class="pagination">
          <li><a href="/car_brands/?page=<%=_page > 1 ? _page-1 : 1%>">&laquo;</a></li>
          <% for(i = 1; i <= totalPage;++i){ %>
            <%if (id) { %>
              <li class="<%=_page == i ? 'active' : ''%>"><a href="/car_brands/?page=<%=i%>&name=<%=id%> "><%=i%></a></li>
            <%} 
            else {%>
              <li class="<%=_page == i ? 'active' : ''%>"><a href="/car_brands/?page=<%=i%>"><%=i%></a></li>
           <% } %>
          <%}%>
          <li><a href="/car_brands/?page=<%=_page < totalPage ? _page + 1 : totalPage%>">&raquo;</a></li>
        </ul>
        
      </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('footer')%>