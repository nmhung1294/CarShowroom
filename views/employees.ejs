<%- include('header')%>
<!-- =============================================== -->
<%- include('aside')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Car Showroom For Manager
    </h1>

  <!-- Main content -->
  <section class="content">

    <div class="box">
      <div class="box-body">
        <form action="" method="get" class="form-inline" role="form">
                      
          <div class="form-group">
              <input type="text" class="form-control" id="" name="sal_id" placeholder="">
          </div>
          <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
          <a href="/add-employee" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Thêm mới</a>
      </form>
      <table class="table">
        <thead>
          <tr>
            <th>Sal ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Report To</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for (let emp of employees_res) { %>
          <tr>
            <td scope="row"><%= emp.sal_id %></td>
            <td><%= emp.name %></td>
            <td><%= emp.email %></td>
            <td><%= emp.phone_number %></td>
            <td><%= emp.position %></td>
            <td><%= emp.salary %></td>
            <td><%= emp.report_to %></td>
            <td class="text-right">
              <a href="/edit-employee/<%= emp.sal_id %>" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Sửa</a>
              <a href="/delete-employee/<%= emp.sal_id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Xóa</a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      
      </div>
      <div class="box-footer">
        
        <ul class="pagination">
          <li><a href="/employees/?page=<%=_page-1%>">&laquo;</a></li>
          <% for(i = 1; i <= totalPage;++i){ %>
            <li><a href="/employees/?page=<%=i%>" class="active"><%=i%></a></li>
          <%}%>
          <li><a href="/employees/?page=<%=_page < totalPage ? _page + 1 : totalPage%>">&raquo;</a></li>
        </ul>
        
      </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('footer')%>