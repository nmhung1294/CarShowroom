                                            <input type="text" id="address" name="address"><br>
                                
                                    </div>
                                
                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-success">Lưu</button>
                                        <a href="/customers" class="btn btn-primary">Quay lại</a>
                                    </div>
                                    
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>

            </section>
            <!-- /.content -->
        </div>
