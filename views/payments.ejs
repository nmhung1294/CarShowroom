<%- include('header')%>
<!-- =============================================== -->
<%- include('aside')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Car Showroom For Manager
    </h1>

  <!-- Main content -->
  <section class="content">

    <div class="box">
      <div class="box-body">
        <form action="" method="get" class="form-inline" role="form">
                      
          <div class="form-group">
              <input type="text" class="form-control" id="" name="ord_id" placeholder="">
          </div>
          <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
      <table class="table">
        <thead>
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Mã Khách Hàng</th>
                <th>Ngày</th>
                <th>Đặt Cọc</th>
                <th>Trạng Thái</th>
                <th>Nợ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for (let payment of res) { %>
            <tr>
                <td scope="row"><%=payment.ord_id%></td>
                <td><%=payment.cus_id%></td>
                <td><%=payment.date%></td>
                <td><%=payment.deposit%></td>
                <td><%=payment.status%></td>
                <td><%=payment.debt%></td>
                <td class="text-right">
                    <a href="/edit-payments/<%=payment.ord_id%>" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Sửa</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
      <div class="box-footer">
        
        <ul class="pagination">
          <li><a href="/payments/?page=<%=_page > 1 ? _page-1 : 1%>">&laquo;</a></li>
          <% for(i = 1; i <= totalPage;++i){ %>
            <li class="<%=_page == i ? 'active' : ''%>"><a href="/payments/?page=<%=i%>" class="active"><%=i%></a></li>
          <%}%>
          <li><a href="/payments/?page=<%=_page < totalPage ? _page + 1 : totalPage%>">&raquo;</a></li>
        </ul>
        
      </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('footer')%>