<%- include('header')%>
<!-- =============================================== -->
<%- include('aside')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Car Showroom For Manager
    </h1>

  <!-- Main content -->
  <section class="content">

    <div class="box">
      <div class="box-body">
        <form action="" method="get" class="form-inline" role="form">
                      
          <div class="form-group">
              <input type="text" class="form-control" id="" name="ord_id" placeholder="">
          </div>
          <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
          <a href="/add-orders" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Thêm mới</a>
      </form>
      <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ngày</th>
                <th>Trạng thái</th>
                <th>ID Khách hàng</th>
                <th>ID Nhân viên</th>
                <th>ID Xe</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for (let ord of res) { %>
            <tr>
                <td scope="row"> <%=ord.ord_id%></td>
                <td><%=ord.date%></td>
                <td><%=ord.status%></td>
                <td><%=ord.cus_id%></td>
                <td><%=ord.sal_id%></td>
                <td><%=ord.car_id%></td>
            </tr>
            <% } %>
        </tbody>
    </table>
    
      </div>
      <div class="box-footer">
        
        <ul class="pagination">
          <li><a href="/orders/?page=<%=_page-1%>">&laquo;</a></li>
          <% for(i = 1; i <= totalPage;++i){ %>
            <li class="<%=_page == i ? 'active' : ''%>"><a href="/orders/?page=<%=i%>" class="active"><%=i%></a></li>
          <%}%>
          <li><a href="/orders/?page=<%=_page < totalPage ? _page + 1 : totalPage%>">&raquo;</a></li>
        </ul>
        
      </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('footer')%>