<%- include('header')%>
    <!-- =============================================== -->
    <%- include('aside')%>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Car Showroom For Manager
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">

                <div class="box">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-4">
                                
                                <form action="/add-employees" method="POST" role="form">
                                    <legend>Nhân viên mới</legend>
                                
                                    <div class="form-group">
                                        <label for="name">Tên:</label><br>
                                        <input type="text" class="form-control" id="new_name" name="new_name" placeholder="Input field">
                                        <label for="email">Email:</label><br>
                                        <input type="text" class="form-control" id="new_email" name="new_email" placeholder="Input field">
                                        <label for="phone_number">Số điện thoại:</label><br>
                                        <input type="text" class="form-control" id="new_phone_number" name="new_phone_number" placeholder="Input field">
                                        <label for="position">Vị trí:</label><br>
                                        <input type="text" class="form-control" id="new_position" name="new_position" placeholder="Input field">
                                        <label for="salary">Lương:</label><br>
                                        <input type="number" class="form-control" id="new_salary" name="new_salary" placeholder="Input field">
                                        <label for="report_to">Báo cáo cho:</label><br>
                                        <input type="text" class="form-control" id="new_report_to" name="new_report_to" placeholder="Input field">
                                    </div>
                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-success">Thêm</button>
                                        <a href="/salesmen" class="btn btn-primary">Quay lại</a>
                                    </div>
                                </form>
                                
                                
                            </div>
                        </div>
                    </div>
                </div>

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('footer')%>